<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:background="@color/backgroundWhitesh"
    >

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/basket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="867 100gr Limon"
            android:layout_alignParentStart="true"
            android:textColor="@color/textMainColor"
            android:fontFamily="@font/roboto_bold"
            android:textSize="18sp"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_price_money"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/basket_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="11,800"
            android:layout_marginStart="6dp"
            android:textColor="@color/textMainColor"
            android:paddingBottom="8dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="8dp"
            android:layout_marginLeft="4dp" />

        <View
            android:layout_marginStart="8dp"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/textPlainColor"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_warehouse"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />
        <TextView
            android:id="@+id/basket_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="188 Кор, 22шт"
            android:paddingTop="8dp"
            android:textColor="@color/textMainColor"
            android:paddingBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

    </LinearLayout>

    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/textLightColor"/>


</LinearLayout>