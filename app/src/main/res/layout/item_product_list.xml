<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundWhitesh"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueSkyLight"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/roboto_bold"
            android:text="867 100gr Limon"
            android:textColor="@color/textMainColor"
            android:textSize="18sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="2.5"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="6dp"
            android:text="11,800"
            android:textColor="@color/textMainColor" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="@color/textPlainColor" />


        <TextView
            android:id="@+id/product_remaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="6dp"
            android:text="188"
            android:textColor="@color/textMainColor" />


        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="@color/textPlainColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            >

            <TextView
                android:id="@+id/minus_box"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/danger_500"
                android:text="-" />


            <TextView
                android:id="@+id/product_order_amount_box"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_toStartOf="@+id/pulus_box"
                android:layout_toLeftOf="@+id/pulus_box"
                android:layout_toEndOf="@+id/minus_box"
                android:layout_toRightOf="@+id/minus_box"
                android:gravity="center"
                android:textColor="@color/textMainColor"
                android:text="24" />

            <TextView
                android:id="@+id/pulus_box"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:textSize="16dp"
                android:gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:layout_alignParentRight="true"
                android:textColor="@color/success_500"
                android:text="+" />

        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="@color/textPlainColor" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            >

            <TextView
                android:id="@+id/minus_count"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/danger_500"
                android:text="-" />


            <TextView
                android:id="@+id/product_order_amount_count"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_toStartOf="@+id/pulus_count"
                android:layout_toLeftOf="@+id/pulus_count"
                android:layout_toEndOf="@+id/minus_count"
                android:layout_toRightOf="@+id/minus_count"
                android:gravity="center"
                android:textColor="@color/textMainColor"
                android:text="356" />


            <TextView
                android:id="@+id/pulus_count"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:textSize="16dp"
                android:gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:layout_alignParentRight="true"
                android:textColor="@color/success_500"
                android:text="+" />

        </RelativeLayout>




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/textLightColor" />


</LinearLayout>