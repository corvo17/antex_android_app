<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/backgroundWhitesh"
    >

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/blueSkyLight">

        <TextView
            android:id="@+id/id_set_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="867 100gr Limon"
            android:layout_alignParentStart="true"
            android:textColor="@color/textMainColor"
            android:fontFamily="@font/roboto_bold"
            android:textSize="18sp"
            android:layout_alignParentLeft="true" />


    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        >
        <TextView
            android:id="@+id/id_set_order_price"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="11,800"
            android:layout_marginStart="6dp"
            android:textColor="@color/textMainColor"
            android:paddingBottom="8dp"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="8dp"
            android:gravity="center"
            android:layout_marginLeft="4dp" />

        <View
            android:layout_marginStart="8dp"
            android:layout_width="0.5dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:background="@color/textPlainColor"
            android:layout_marginLeft="8dp" />
        

        <TextView
            android:id="@+id/id_set_order_remaining"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="188 Кор, 22шт"
            android:paddingTop="8dp"
            android:gravity="center"
            android:textColor="@color/textMainColor"
            android:paddingBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />


        <View
            android:layout_marginStart="8dp"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/textPlainColor"
            android:layout_marginLeft="8dp" />
        
        
        <TextView
            android:id="@+id/id_set_order_order_amount"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textLightColor"/>


</LinearLayout>