<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.orders.basketList.item_fragments.ProductsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/lnl_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:background="@color/blueSkyBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.9"
            android:textSize="16sp"
            android:background="@color/blueSkyBackground"
            android:gravity="center"
            android:text="â„–" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:textSize="16sp"
            android:background="@color/blueSkyBackground"
            android:gravity="center"
            android:text="Name" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4.0"
            android:textSize="16sp"
            android:background="@color/blueSkyBackground"
            android:gravity="center"
            android:text="Price" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@color/blueSkyBackground"
            android:text="Count" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:textSize="16sp"
            android:background="@color/blueSkyBackground"
            android:gravity="center"
            android:text="Sum" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnl_contents">

       <android.support.constraint.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <android.support.v7.widget.RecyclerView
               android:id="@+id/saved_products_recycler"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               app:layoutManager="android.support.v7.widget.LinearLayoutManager"
               android:orientation="vertical"
               android:background="#9B9999"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               >

           </android.support.v7.widget.RecyclerView>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@color/blueSkyBackground"
               app:layout_constraintTop_toBottomOf="@id/saved_products_recycler"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent">




               <TextView
                   android:id="@+id/name"
                   android:layout_width="80dp"
                   android:layout_height="match_parent"
                   android:layout_weight="6.4"
                   android:textSize="14dp"
                   android:paddingBottom="8dp"
                   android:paddingTop="8dp"
                   android:paddingEnd="2dp"
                   android:paddingStart="2dp"
                   android:layout_marginRight="1.5dp"
                   android:layout_marginBottom="1.5dp"
                   android:background="@color/blueSkyBackground"
                   android:gravity="center"
                   android:text="Total" />

               <TextView
                   android:id="@+id/price"
                   android:layout_width="60dp"
                   android:layout_height="match_parent"
                   android:layout_weight="4.0"
                   android:textSize="14dp"
                   android:paddingBottom="8dp"
                   android:paddingTop="8dp"
                   android:paddingEnd="2dp"
                   android:paddingStart="2dp"
                   android:layout_marginRight="1.5dp"
                   android:layout_marginBottom="1.5dp"
                   android:background="@color/blueSkyBackground"
                   android:gravity="center"
                   android:text="" />

               <TextView
                   android:id="@+id/count"
                   android:layout_width="40dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1.2"
                   android:gravity="center"
                   android:textSize="14dp"
                   android:paddingBottom="8dp"
                   android:paddingTop="8dp"
                   android:paddingEnd="2dp"
                   android:paddingStart="2dp"
                   android:layout_marginRight="1.5dp"
                   android:layout_marginBottom="1.5dp"
                   android:background="@color/blueSkyBackground"
                   android:text="Count" />

               <TextView
                   android:id="@+id/total"
                   android:layout_width="60dp"
                   android:layout_height="match_parent"
                   android:layout_weight="2.2"
                   android:textSize="14dp"
                   android:paddingBottom="8dp"
                   android:paddingTop="8dp"
                   android:paddingEnd="2dp"
                   android:paddingStart="2dp"
                   android:layout_marginRight="1.5dp"
                   android:layout_marginBottom="1.5dp"
                   android:background="@color/blueSkyBackground"
                   android:gravity="center"
                   android:text="Total" />
           </LinearLayout>
       </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>